{
  "id": {{ exhibitor.app-id }},
  "cpus": {{ exhibitor.cpus }},
  "mem": {{ exhibitor.mem }},
  "instances": {{ exhibitor.instances }},
  "constraints": [["hostname", "UNIQUE"]],
  "ports": [
    {{ exhibitor.http-port }},
    {{ exhibitor.zookeper-client-port }},
    {{ exhibitor.zookeeper-peer-port }},
    {{ exhibitor.zookeeper-leader-port }}],
  "requirePorts": true,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": {{ exhibitor.docker-image }},
      "network": "HOST",
      "forcePullImage": true
    }
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/exhibitor/v1/cluster/state",
      "gracePeriodSeconds": 120,
      "intervalSeconds": 60,
      "portIndex": 0,
      "timeoutSeconds": 30,
      "maxConsecutiveFailures": 3
    }
  ],
  "cmd": "/exhibitor-wrapper -c zookeeper --headingtext \"{{ exhibitor.app-id }}\" --zkconfigconnect {{exhibitor.zk}} --zkconfigzpath \"/dcos-exhibitor{{exhibitor.app-id}}\""
}

